<div class="panel-body">
  <%= form_tag request_bitcoin_path, id: 'request_bitcoin_form' %>
    <div class="form-group">
      <%= label_tag 'request-amount' %>
      <div class="input-group">
      <%= text_field_tag 'request-amount', '', placeholder: 'The amount of USD to request', class: 'form-control' %>
      <div class="btn-group input-group-btn">
        <button type="button" class="btn btn-default dropdown-toggle form-control" data-toggle="dropdown">
          <span data-bind="label" id="requestlabel">USD</span> <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu" id="requestcurrencymenu">
          <li><a href="#">USD</a></li>
          <li><a href="#">BTC</a></li>
       </ul>
       <input type="hidden" name="currencyrequest" value="USD">
      </div><!-- /btn-group -->
    </div><!-- /input-group -->
    </div>

    <div class="form-group">
      <%= label_tag 'requestee' %>
      <%= text_field_tag 'request-kerberos', '', placeholder: 'The Kerberos ID / BTC Address of the requestee', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag 'Message' %>
      <%= text_field_tag 'request-message', '', placeholder: 'A kind word or two', class: 'form-control' %>
    </div>

    <%= submit_tag 'Request', class: 'btn btn-default' %>
  </form>

  <script>
    // FIXME This is ugly...
    // window.setup_recipient_autocomplete();
  </script>
</div>