<div class="col-md-6">
  <%= form_tag sessions_authenticate_path, id: 'login_form' %>
    <h2 class="center">Sign in Here</h4>
    <div class="form-group">
      <%= label_tag :username %>
      <%= text_field_tag :username, '', class: 'form-control', placeholder: 'Username here. ' %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, '', class: 'form-control', placeholder: 'Password here. ' %>
    </div>
    <%= submit_tag 'Login', class: 'btn btn-primary form-control' %>
  </form>
</div>
<div class="col-md-3"></div>