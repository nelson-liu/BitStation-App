<% if @error %>
  $('#new_comment #error').text("<%=j @error %>");
<% else %>
  $('#new_comment #error').text('');
  $('#new_comment input[name=comment\\[content\\]]').val('');

  $('#comments>p').remove()
  $('#comments').prepend("<%=j @rendered_comment %>");

  $("#transaction_comments_count_<%= @transaction.id %>").text("<%=j pluralize(@transaction.comments.count, 'Comment') %>");

	window.resize_popup();
<% end %>